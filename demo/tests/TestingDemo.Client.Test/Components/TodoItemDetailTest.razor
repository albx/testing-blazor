@inherits TestContext

@code {
    [Fact]
    public void TodoItemDetail_Should_Set_Item_Parameter_Correctly()
    {
        var item = new TodoItem { Id = Guid.NewGuid(), Title = "test", IsDone = false };

        var component = RenderComponent<TodoItemDetail>(
            parameters => parameters.Add(p => p.Item, item));

        Assert.Equal(item, component.Instance.Item);
    }
}
